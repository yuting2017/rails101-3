<p> <%= @group.description %></p>

<table class="table">
  <thead>
  <tr>
   <th>文章内容</th>
   <th>发表者</th>
   <th>发表时间</th>
  </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
    <tr>
     <td><%= post.content %></td>
     <td><%= post.user.email %></td>
     <td><%= post.created_at %></td>
    </tr>
    <% end %>
    </tbody>
    </table>

  